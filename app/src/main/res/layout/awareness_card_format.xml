<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="5dp"
    >



<!--        user profile image-->


    <!--            blog title and time ago-->


    <!--            the image or view of the blog and its title-->


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/userImage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/proo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/username"
        android:layout_width="155dp"
        android:layout_height="18dp"

        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        android:text="Ebomba1"
        android:textColor="#075509"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/userImage"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/time_ago"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="5dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="16dp"
        android:text="2 Min ago"
        android:textColor="@color/ecosense_color"
        android:textSize="9sp"
        app:layout_constraintStart_toEndOf="@+id/username"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/description"
        android:layout_width="222dp"
        android:layout_height="31dp"
        android:layout_marginStart="12dp"
        android:fontFamily="sans-serif-condensed"
        android:lineSpacingExtra="-3sp"
        android:text="We should all be part of the solution to keep Uganda clean"
        android:textColor="#1C1C1C"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/userImage"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="252dp"
        android:layout_height="190dp"
        android:layout_marginVertical="5dp"
        android:layout_marginStart="72dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/description">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/room" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/likes"
        android:layout_width="15dp"
        android:layout_height="13dp"
        android:layout_marginHorizontal="2dp"
        android:layout_marginTop="13dp"
        android:text="57"
        android:textColor="@color/ecosense_color"
        android:textSize="11sp"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/cardView" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginHorizontal="4dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/ic_baseline_favorite_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView" />

    <TextView
        android:id="@+id/downloads"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginHorizontal="2dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="13dp"
        android:text="23"
        android:textColor="@color/ecosense_color"
        android:textSize="11sp"
        app:layout_constraintStart_toEndOf="@+id/imageView5"
        app:layout_constraintTop_toBottomOf="@+id/cardView" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginHorizontal="4dp"
        android:layout_marginStart="71dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/dow"
        app:layout_constraintStart_toEndOf="@+id/comments"
        app:layout_constraintTop_toBottomOf="@+id/cardView" />

    <TextView
        android:id="@+id/comments"
        android:layout_width="14dp"
        android:layout_height="13dp"
        android:layout_marginHorizontal="2dp"
        android:layout_marginTop="12dp"
        android:text="18"
        android:textColor="@color/ecosense_color"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/imageView4"
        app:layout_constraintTop_toBottomOf="@+id/cardView" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="15dp"
        android:layout_height="15dp"

        android:layout_marginStart="81dp"
        android:layout_marginTop="13dp"
        android:src="@drawable/comm"
        app:layout_constraintStart_toEndOf="@+id/likes"
        app:layout_constraintTop_toBottomOf="@+id/cardView" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="0dp"
        android:text="Emoba Mercy"
        android:textSize="13sp"
        app:layout_constraintStart_toEndOf="@+id/userImage"
        app:layout_constraintTop_toBottomOf="@+id/username" />


</androidx.constraintlayout.widget.ConstraintLayout>